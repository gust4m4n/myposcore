  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch MyPOSCore",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "SERVER_PORT": "8080"
      },
      "preLaunchTask": "kill-port-8080"
    },
    {
      "name": "API Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "args": ["-test.v", "-test.run", "^Test.*Endpoint"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
